# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/campus_resource_db
# Alternative: use separate connection parameters
# MONGO_HOST=localhost
# MONGO_PORT=27017
# MONGO_DB=campus_resource_db
# MONGO_USER=
# MONGO_PASSWORD=

# For standalone MongoDB (without replica sets - no transactions)
MONGO_STANDALONE=true

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Timezone Configuration
DEFAULT_TIMEZONE=Asia/Karachi

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Booking Configuration
MAX_BOOKING_DURATION_HOURS=8
MIN_BOOKING_DURATION_MINUTES=30
ADVANCE_BOOKING_DAYS=30
CANCELLATION_NOTICE_HOURS=2

# Auto-Approval Rules
AUTO_APPROVE_MAX_DURATION_HOURS=2
AUTO_APPROVE_ALLOWED_HOURS_START=08:00
AUTO_APPROVE_ALLOWED_HOURS_END=18:00

# Check-In Configuration
CHECK_IN_WINDOW_BEFORE_MINUTES=15
CHECK_IN_WINDOW_AFTER_MINUTES=15
AUTO_RELEASE_NO_SHOW_MINUTES=15

# App URL (for calendar links)
APP_URL=http://localhost:3000
